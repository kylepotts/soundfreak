<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="30dp"
    android:id="@+id/layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Night To Remember"
        android:id="@+id/mediaSongName"
        android:layout_weight="0.50"
        android:textSize="25dp"
        android:paddingLeft="10dp"
        android:paddingTop="25dp"
        android:focusable="false"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Song Author"
        android:id="@+id/textView2"
        android:layout_weight="0.50"
        android:layout_below="@+id/mediaSongName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:textColor="#ccffffff"
        android:fontFamily="sans-serif-light" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="false"
        android:progress="@integer/abc_max_action_buttons" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/media_play_button"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/media_play_button"
        android:background="@android:color/transparent"
        android:scaleX="2.5"
        android:cropToPadding="false"
        android:clickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/media_skip_prev_button"
        android:src="@mipmap/media_skip_prev_button"
        android:background="@android:color/transparent"
        android:layout_above="@+id/seekBar"
        android:layout_toLeftOf="@+id/media_play_button"
        android:layout_toStartOf="@+id/media_play_button"
        android:clickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/media_skip_next_button"
        android:src="@mipmap/media_skip_next_button"
        android:background="@android:color/transparent"
        android:layout_above="@+id/seekBar"
        android:layout_toRightOf="@+id/media_play_button"
        android:layout_toEndOf="@+id/media_play_button"
        android:clickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/media_info_button"
        android:src="@mipmap/media_info_button"
        android:background="@android:color/transparent"
        android:layout_above="@+id/seekBar"
        android:layout_alignRight="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar"
        android:clickable="true"
        android:paddingRight="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/media_mute_button"
        android:src="@mipmap/media_mute_button"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:paddingLeft="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/media_music_queue_button"
        android:src="@mipmap/media_music_queue_button"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:layout_alignBottom="@+id/mediaSongName"
        android:layout_alignLeft="@+id/media_info_button"
        android:layout_alignStart="@+id/media_info_button"
        android:paddingTop="25dp"
        android:paddingRight="10dp" />

</RelativeLayout>
